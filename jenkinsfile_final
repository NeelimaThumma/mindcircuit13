pipeline {
    agent any
	
	tools {
	maven maven3
	}

    stages {
        stage('checkout') {
            steps {
                echo 'Hello World'
				git branch: 'main', url: 'https://github.com/NeelimaThumma/mindcircuit13.git'  
            }
        }
		
		stage('sonarqube scan') {
            steps {
                echo 'Hello World'
				sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://54.198.52.170:9000 \\
                      -Dsonar.login=squ_94bca60ba6fadd32de9153ebc4396111f87564a5'''
				
            }
        }
		
		stage('build artifact') {
            steps {
				echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		
		stage('build docker image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t neelimathumma/neelima:${BUILD_NUMBER} .'
            }
        }
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            sh 'docker login -u neelimathumma -p ${dockerhub}'
			
			 }
			   sh 'docker push neelimathumma/neelima:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }


stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "mindcircuit13"
            GIT_USER_NAME = "NeelimaThumma"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  sh '''
                    git config user.email "neelimareddythumma@gmail.com"
                    git config user.name "neelima"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/neelima:.*/neelima:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		

    }
}
